<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/white">
<ImageView
    android:layout_gravity="center"
    android:id="@+id/carItemImageView"
    android:layout_width="@dimen/image_size"
    android:layout_height="@dimen/image_height"
    android:src="@drawable/ic_launcher_foreground"/>
    <LinearLayout
        android:layout_marginTop="@dimen/car_item_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/carItemName"
            android:layout_marginStart="@dimen/car_item_margin_start"
            android:layout_width="0px"
            android:layout_weight="50"
            android:textStyle="bold"
            android:text="@string/name"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/carItemPrice"
            android:gravity="end"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_width="0px"
            android:layout_weight="50"
            android:text="@string/price"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/car_item_margin_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/carItemStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_amber_400_24dp"/>

        <ImageView
            android:id="@+id/carItemStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_amber_400_24dp"/>

        <ImageView
            android:id="@+id/carItemStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_amber_400_24dp"/>

        <ImageView
            android:id="@+id/carItemStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_amber_400_24dp"/>

        <ImageView
            android:id="@+id/carItemStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_amber_400_24dp"/>
        <TextView
            android:id="@+id/carItemVoteNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(0)"/>
    </LinearLayout>
</LinearLayout>